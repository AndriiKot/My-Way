@require "./*"

body 
    background color-background
    .container
         position-center()
         background @color
         font-size font-size-text
         color color-text
         border border-size 
         padding text-padding
        :hover div 
            transform rotateY(360deg)
        div 
            display inline-block
            font-family font-style
            transition .9s
        .hidden
            visibility hidden
        animation(14)

